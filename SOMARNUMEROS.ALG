Algoritmo "SomarNumeros"

Var

   contador,N,soma: Inteiro


Inicio

      contador <- 1
      soma <- 0
      
      Enquanto (contador <= 10) faca
               Escreva("Informe o", contador,"º número: ")
               Leia(N)
               soma <- soma + N
               contador <- contador + 1
      FimEnquanto

      Escreva("A soma dos números informados é: ",soma)
      
Fimalgoritmo